{
  "version": 2,
  "functions": {
    "api/index.php": { "runtime": "vercel-php@0.7.4" }
  },
  "builds": [
    { "src": "api/index.php", "use": "vercel-php@0.7.4" }
  ],
  "installCommand": "echo 'Skipping npm install for PHP project'",
  "buildCommand": "echo 'No build needed for PHP project'",
  "outputDirectory": "public",
  "ignoreCommand": "git diff --quiet HEAD^ HEAD ./api/",
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/api/index.php"
    }
  ],
  "env": {
    "APP_NAME": "AFMS",
    "APP_ENV": "production",
    "APP_KEY": "base64:GENERATE_NEW_KEY_FOR_PRODUCTION",
    "APP_DEBUG": "false",
    "APP_URL": "https://your-app.vercel.app",
    "APP_CONFIG_CACHE": "/tmp/config.php",
    "APP_EVENTS_CACHE": "/tmp/events.php",
    "APP_PACKAGES_CACHE": "/tmp/packages.php",
    "APP_ROUTES_CACHE": "/tmp/routes.php",
    "APP_SERVICES_CACHE": "/tmp/services.php",
    "VIEW_COMPILED_PATH": "/tmp",
    "CACHE_DRIVER": "array",
    "LOG_CHANNEL": "stderr",
    "SESSION_DRIVER": "array"
  }
}